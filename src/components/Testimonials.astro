---
import { Swiper, SwiperSlide } from "swiper/react";
import "swiper/css";
import Carousel from "./Carousel.jsx";
import Card from "./Card.astro";
import georgiaPettit from "../images/people/georgia-pettit.png";
import Button from "./Button.astro";
---

<section>
  <div class="container container-large">
    <div class="padding-global py-36">
      <div class="padding-extra">
        <div>
          <h2 class="text-center mb-1">Don't just take it from me.</h2>
          <h4 class="text-center text-lg mb-10">
            Here's what my clients have had to say.
          </h4>
          <div
            class="flex flex-col lg:flex-row justify-center gap-0 lg:gap-12 mb-8"
          >
            <!-- <Carousel client:load /> -->
            <Card
              header="Georgia Pettit, CEO @ Luminary"
              text="Tom's data-driven approach to website optimization was a game-changer for our online business. His ability to translate analytics into actionable insights led to a remarkable increase in our conversion rates. His expertise in user engagement strategies has been invaluable to our team."
              icon={georgiaPettit}
              classes="w-full lg:w-1/2"
              rounded={true}
            />
            <Card
              header="John Smith, CEO @ Fake Company"
              text="Tom's data-driven approach to website optimization was a game-changer for our online business. His ability to translate analytics into actionable insights led to a remarkable increase in our conversion rates. His expertise in user engagement strategies has been invaluable to our team."
              icon={georgiaPettit}
              classes="w-full lg:w-1/2"
              rounded={true}
            />
          </div>
          <div class="flex justify-center">
            <Button text="Get In Touch" type="tertiary" link="/contact" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
