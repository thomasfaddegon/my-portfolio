---
import H3 from "../components/H3.astro";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  text?: string;
  image: any;
}

const { title, text, image } = Astro.props as Props;
---

<div class={`mb-12`}>
  <div class=`flex flex-col gap-4`>
    <div>
      <Image
        src={image}
        alt="certification icon"
        height="150"
        width="150"
        class="border rounded-full"
      />
    </div>
    <div class="flex flex-col gap-3">
      <!-- <H3 header={title}/> -->
      <h3 class="text-lightBlue">{title}</h3>
      <p class="">{text}</p>
    </div>
  </div>
</div>
