---
import H3 from "../components/H3.astro";
import { Image } from "astro:assets";

export interface Props {
  header: string;
  text: string;
  icon: any;
  classes?: string;
  rounded?: boolean;
}

const { header, text, classes, icon, rounded } = Astro.props as Props;

const imageRounded = rounded ? "rounded-full" : "rounded-xl";
---

<!-- Card HTML structure -->
<div class=`py-6 ${
  classes ?? ""
}`>
  <div class="card px-4 py-5 pb-8 flex flex-col items-center w-full h-full">
    <div
      class=`max-w-36 flex items-center w-full mb-4 ${imageRounded} overflow-hidden`
    >
      <Image src={icon} alt="icon" width="300" height="250" />
    </div>
    <div class="mb-4">
      <H3 centered="True" header={header} maxWidth="14" classes="text-lg" />
    </div>
    <span class="text-center leading-[1.6rem]">{text}</span>
  </div>
</div>

<style>
  .image {
  }
  .card {
    position: relative;
    background-image: url("src/images/backgrounds/gradient.png");
    background-size: cover;
    background-position: bottom left;
    background-repeat: no-repeat;
    border-radius: 15px;
    z-index: 1;
  }

  .card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    pointer-events: none;
    z-index: -1;
  }

  .card p,
  h3 {
    position: relative;
    z-index: 2;
  }
</style>
