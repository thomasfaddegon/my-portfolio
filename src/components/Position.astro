---
import H3 from "./H3.astro";

export interface Props {
  title: string;
  location: string;
  years: any;
  description: string;
}

const { title, location, years, description } = Astro.props as Props;
---

<div class="w-full lg:w-1/2">
  <div class="flex flex-col gap-1">
    <div class="">
      <H3 header={title} classes="text-lg font-bold" />
    </div>
    <div><span class="font-bold">{location}</span></div>
    <div><span class="text-purple">{years}</span></div>
    <div><span>{description}</span></div>
  </div>
</div>
