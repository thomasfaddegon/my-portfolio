---
const { centered, header, maxWidth, classes, hideBracketOnMobile } =
  Astro.props as {
    header: string;
    centered?: boolean;
    maxWidth?: string;
    classes?: string;
    hideBracketOnMobile?: boolean;
  };

const center = centered === true ? "text-center" : "";
const hideBracket = hideBracketOnMobile ? "hidden xl:flex" : "";
